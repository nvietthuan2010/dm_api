<odoo>

    <record id="view_job_kanban" model="ir.ui.view">
        <field name="name">hr.job.kanban.dumuc</field>
        <field name="model">hr.job</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <field name="name"/>
                            </div>
                            <div>Garage: <field name="garage_id"/></div>
                            <div>Trạng thái: <field name="approval_state"/></div>
                            <div class="mt8">
                                <span class="badge badge-primary">
                                    <field name="job_code"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- JOB TREE -->
    <record id="view_job_tree" model="ir.ui.view">
        <field name="name">hr.job.tree.dumuc</field>
        <field name="model">hr.job</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="garage_id"/>
                <field name="post_date"/>
                <field name="expire_date"/>
                <field name="approval_state"/>
                <field name="premium"/>
            </tree>
        </field>
    </record>

    <!-- JOB FORM -->
    <record id="view_job_form" model="ir.ui.view">
        <field name="name">hr.job.form.dumuc</field>
        <field name="model">hr.job</field>
        <field name="arch" type="xml">
            <form string="Tin tuyển dụng">
                <header>
                    <button name="action_submit" type="object" string="Gửi duyệt"
                            states="draft" class="btn-primary"/>
                    <button name="action_approve" type="object" string="Duyệt"
                            states="pending" class="btn-success"/>
                    <button name="action_reject" type="object" string="Từ chối"
                            states="pending" class="btn-danger"/>

                    <button name="%(dumuc_recruitment_core.action_applicant)d"
                            type="action" string="Ứng viên"
                            class="oe_stat_button"
                            icon="fa-users"/>

                    <button name="%(dumuc_recruitment_core.action_credit_wallet)d"
                            type="action" string="Tín dụng"
                            class="oe_stat_button"
                            icon="fa-credit-card"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="garage_id"/>
                        <field name="job_code"/>
                        <field name="visibility"/>
                        <field name="premium"/>
                        <field name="duration_days"/>
                        <field name="approval_state" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Mô tả">
                            <field name="description"/>
                        </page>
                        <page string="Sàng lọc">
                            <field name="screening_question_ids"/>
                        </page>
                        <page string="Tính điểm">
                            <field name="scoring_rule_ids"/>
                        </page>
                        <page string="Thống kê">
                            <field name="matching_score"/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- SCREENING FORM -->
    <record id="view_screening_form" model="ir.ui.view">
        <field name="name">dumuc.screening.form</field>
        <field name="model">dumuc.screening.question</field>
        <field name="arch" type="xml">
            <form string="Câu hỏi sàng lọc">
                <sheet>
                    <group>
                        <field name="job_id"/>
                        <field name="question"/>
                        <field name="required"/>
                        <field name="reject_if_fail"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
