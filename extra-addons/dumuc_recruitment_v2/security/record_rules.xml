<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================= JOB ================= -->

    <record id="rule_job_employer_own" model="ir.rule">
        <field name="name">Employer: Own Jobs</field>
        <field name="model_id" ref="model_dumuc_job"/>
        <field name="groups" eval="[(4, ref('dumuc_recruitment.group_recruit_employer'))]"/>
        <field name="domain_force">[('company_id.user_id', '=', user.id)]</field>
    </record>

    <!-- ================= APPLICATION ================= -->

    <record id="rule_application_seeker_own" model="ir.rule">
        <field name="name">Seeker: Own Applications</field>
        <field name="model_id" ref="model_dumuc_application"/>
        <field name="groups" eval="[(4, ref('dumuc_recruitment.group_recruit_seeker'))]"/>
        <field name="domain_force">[('seeker_id.user_id', '=', user.id)]</field>
    </record>

    <!-- ================= WALLET ================= -->

    <record id="rule_wallet_employer_own" model="ir.rule">
        <field name="name">Employer: Own Wallet</field>
        <field name="model_id" ref="model_dumuc_wallet"/>
        <field name="groups" eval="[(4, ref('dumuc_recruitment.group_recruit_employer'))]"/>
        <field name="domain_force">[('company_id.user_id', '=', user.id)]</field>
    </record>

    <record id="rule_wallet_tx_employer_own" model="ir.rule">
        <field name="name">Employer: Own Wallet Transactions</field>
        <field name="model_id" ref="model_dumuc_wallet_tx"/>
        <field name="groups" eval="[(4, ref('dumuc_recruitment.group_recruit_employer'))]"/>
        <field name="domain_force">[('wallet_id.company_id.user_id', '=', user.id)]</field>
    </record>

</odoo>
