<odoo>
  <record id="view_dumuc_vehicle_brand_tree" model="ir.ui.view">
    <field name="name">dumuc.vehicle.brand.tree</field>
    <field name="model">dumuc.vehicle.brand</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="code"/>
      </tree>
    </field>
  </record>

  <record id="view_dumuc_vehicle_brand_form" model="ir.ui.view">
    <field name="name">dumuc.vehicle.brand.form</field>
    <field name="model">dumuc.vehicle.brand</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
          </group>
          <notebook>
            <page string="Dòng xe">
              <field name="model_ids">
                <tree editable="bottom">
                  <field name="name"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_dumuc_vehicle_brand" model="ir.actions.act_window">
    <field name="name">Hãng xe</field>
    <field name="res_model">dumuc.vehicle.brand</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_dumuc_vehicle_brand_tree"/>
  </record>

  <record id="view_dumuc_vehicle_model_tree" model="ir.ui.view">
    <field name="name">dumuc.vehicle.model.tree</field>
    <field name="model">dumuc.vehicle.model</field>
    <field name="arch" type="xml">
      <tree>
        <field name="brand_id"/>
        <field name="name"/>
      </tree>
    </field>
  </record>

  <record id="view_dumuc_vehicle_model_form" model="ir.ui.view">
    <field name="name">dumuc.vehicle.model.form</field>
    <field name="model">dumuc.vehicle.model</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="brand_id"/>
            <field name="name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_dumuc_vehicle_model" model="ir.actions.act_window">
    <field name="name">Dòng xe</field>
    <field name="res_model">dumuc.vehicle.model</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_dumuc_vehicle_model_tree"/>
  </record>
</odoo>
