<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Service Package -->
    <record id="view_dumuc_service_package_tree" model="ir.ui.view">
        <field name="name">dumuc.service.package.tree</field>
        <field name="model">dumuc.service.package</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="package_type"/>
                <field name="price"/>
                <field name="duration_days"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_dumuc_service_package_form" model="ir.ui.view">
        <field name="name">dumuc.service.package.form</field>
        <field name="model">dumuc.service.package</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="package_type"/>
                    </group>
                    <group>
                        <field name="price"/>
                        <field name="duration_days"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dumuc_service_package" model="ir.actions.act_window">
        <field name="name">Gói dịch vụ</field>
        <field name="res_model">dumuc.service.package</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_dumuc_service_package_tree"/>
    </record>

    <!-- Transactions -->
    <record id="view_dumuc_transaction_tree" model="ir.ui.view">
        <field name="name">dumuc.transaction.tree</field>
        <field name="model">dumuc.transaction</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="direction"/>
                <field name="transaction_type"/>
                <field name="state"/>
                <field name="description"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_dumuc_transaction_form" model="ir.ui.view">
        <field name="name">dumuc.transaction.form</field>
        <field name="model">dumuc.transaction</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="amount"/>
                    </group>
                    <group>
                        <field name="direction"/>
                        <field name="transaction_type"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dumuc_transaction" model="ir.actions.act_window">
        <field name="name">Giao dịch ví</field>
        <field name="res_model">dumuc.transaction</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_dumuc_transaction_tree"/>
    </record>
</odoo>
