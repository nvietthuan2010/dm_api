<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Booking -->
    <record id="view_dumuc_inspection_booking_tree" model="ir.ui.view">
        <field name="name">dumuc.inspection.booking.tree</field>
        <field name="model">dumuc.inspection.booking</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="listing_id"/>
                <field name="evaluator_id"/>
                <field name="template_id"/>
                <field name="state"/>
                <field name="scheduled_datetime"/>
            </tree>
        </field>
    </record>

    <record id="view_dumuc_inspection_booking_form" model="ir.ui.view">
        <field name="name">dumuc.inspection.booking.form</field>
        <field name="model">dumuc.inspection.booking</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="state"/>
                            <field name="customer_id"/>
                        </group>
                        <group>
                            <field name="listing_id"/>
                            <field name="external_vehicle_info"/>
                            <field name="package_id"/>
                            <field name="template_id"/>
                        </group>
                    </group>

                    <group string="Lịch Hẹn Kiểm Định">
                        <group>
                            <field name="evaluator_id"/>
                            <field name="scheduled_datetime"/>
                        </group>
                        <group>
                            <field name="location_address"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Kết Quả Kiểm Định">
                            <field name="result_id">
                                <tree editable="bottom">
                                    <field name="booking_id"/>
                                    <field name="evaluator_id"/>
                                    <field name="overall_quality"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dumuc_inspection_booking" model="ir.actions.act_window">
        <field name="name">Yêu cầu kiểm định</field>
        <field name="res_model">dumuc.inspection.booking</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_dumuc_inspection_booking_tree"/>
    </record>

    <!-- Result -->
    <record id="view_dumuc_inspection_result_tree" model="ir.ui.view">
        <field name="name">dumuc.inspection.result.tree</field>
        <field name="model">dumuc.inspection.result</field>
        <field name="arch" type="xml">
            <tree>
                <field name="booking_id"/>
                <field name="evaluator_id"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_dumuc_inspection_result_form" model="ir.ui.view">
        <field name="name">dumuc.inspection.result.form</field>
        <field name="model">dumuc.inspection.result</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="booking_id"/>
                            <field name="evaluator_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="pdf_attachment_id"/>
                            <field name="public_token"/>
                        </group>
                    </group>
                    <group>
                        <field name="summary"/>
                    </group>

                    <notebook>
                        <page string="Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="group_id" readonly="1"/>
                                    <field name="criteria_id" readonly="1"/>
                                    <field name="status"/>
                                    <field name="note"/>
                                    <field name="image_id" widget="image"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dumuc_inspection_result" model="ir.actions.act_window">
        <field name="name">Hồ sơ kiểm định</field>
        <field name="res_model">dumuc.inspection.result</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_dumuc_inspection_result_tree"/>
    </record>


    <record id="view_dumuc_inspection_template_tree" model="ir.ui.view">
        <field name="model">dumuc.inspection.template</field>
        <field name="name">dumuc.inspection.template.tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="version"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_dumuc_inspection_template_form" model="ir.ui.view">
        <field name="model">dumuc.inspection.template</field>
        <field name="name">dumuc.inspection.template.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="version"/>
                        <field name="is_active"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Nhóm hạng mục">
                            <field name="group_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="sequence"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dumuc_inspection_template" model="ir.actions.act_window">
        <field name="name">Bộ kiểm định</field>
        <field name="res_model">dumuc.inspection.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_dumuc_inspection_template_tree"/>
    </record>

    <!-- GROUP -->
   

    <record id="view_dumuc_inspection_group_tree" model="ir.ui.view">
        <field name="model">dumuc.inspection.group</field>
        <field name="name">dumuc.inspection.group.tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="template_id"/>
                <field name="name"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <record id="view_dumuc_inspection_group_form" model="ir.ui.view">
        <field name="model">dumuc.inspection.group</field>
        <field name="name">dumuc.inspection.group.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="template_id"/>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>
                    <notebook>
                        <page string="Hạng mục">
                            <field name="criteria_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dumuc_inspection_group" model="ir.actions.act_window">
        <field name="name">Nhóm kiểm tra</field>
        <field name="res_model">dumuc.inspection.group</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_dumuc_inspection_group_tree"/>
    </record>


    <!-- CRITERIA -->
    <record id="action_dumuc_inspection_criteria" model="ir.actions.act_window">
        <field name="name">Hạng mục kiểm tra</field>
        <field name="res_model">dumuc.inspection.criteria</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
